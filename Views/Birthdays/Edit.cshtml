@model BirthdayDiaryApp.Models.Birthdays

@{
    ViewBag.Title = "Edit";
}

<div class="inner">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Edit Birthdays</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <p style="font-family: 'Monotype Corsiva'; margin-left: 195px; font-size:25px">
                @Html.LabelFor(model => model.BirthName)
                </p>
                <div class="col-md-10" style="margin-left:180px">
                    @Html.EditorFor(model => model.BirthName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BirthName, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <p style="font-family: 'Monotype Corsiva'; margin-left: 195px; font-size:25px">
                @Html.LabelFor(model => model.BirthDate)
                </p>
                <div class="col-md-10" style="margin-left:180px">
                    @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                </div>
        </div>

            <div class="form-group" style="margin-left: 50px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div style="font-family:'Monotype Corsiva'">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
